<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tv_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_obtener_clima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obtener Datos de OpenWeatherMap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        />

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Contenido del clima"
                  android:id="@+id/tv_response_json"
        />

    </ScrollView>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Temperatura C. "
              android:id="@+id/tv_temperatura_celcius"
              android:padding="10dp"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Estado"
              android:id="@+id/tv_estado_cielo"
              android:padding="10dp"
              />

</LinearLayout>